
<h1>My Dashboard</h1>

<h1>My Games</h1>

<% @games.each do |game| %>
  <div>
    <h2><%=game.game_title%></h2>
    <%= link_to "Play this game", game_path(game) %>
  </div>
<% end %>


<h1>Join a Game</h1>

<% @all_games.each do |game| %>
  <% if game.player != current_user.player && (game.white_player_id == nil || game.black_player_id == nil)%>
  <div>
    <h2><%= game.game_title %></h2><br />
    <%= link_to "Play this game", game_path(game) %>
  </div>
  <% end %>
<% end %>


