<h1><%= @game.game_title %></h1>


<div class="chessboard">
  <table id="chessboard_table" >
      <% 7.downto(0) do |row| %>
        <tr class= "chessboard-col">
          <% 7.downto(0) do |col| %>
            <td data-x_position="<%= col %>"data-y_position="<%= row %>">
              <%=@game.pieces.image.htmlsafe%>
             </td>
          <% end %><!--end column-->
        </tr>
      <% end %><!--end row-->
  </table>
</div>
