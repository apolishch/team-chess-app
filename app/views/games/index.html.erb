<h1>Join a Game</h1>

<% @games.each do |game| %>
  <% if game.player != current_user.player && (game.white_player_id == nil || game.black_player_id == nil)%>
  <div>
    <h3><%= game.game_title %>, <span><%= link_to "Play this game", game_path(game) %></span> </h3><br />
  </div>
  <% end %>
<% end %>
